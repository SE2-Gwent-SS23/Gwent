<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutRedraw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/number_of_border"
    android:padding="2dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnRedraw"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Neu Ziehen" />

        <Button
            android:id="@+id/btnEndRedraw"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="275dp"
            android:layout_marginBottom="437dp"
            android:onClick="onClickCloseRedraw"
            android:text="Fertig" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>